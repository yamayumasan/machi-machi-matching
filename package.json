{
  "name": "machi-machi-matching",
  "version": "0.1.0",
  "private": true,
  "description": "地域密着型活動マッチングサービス",
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:api": "pnpm --filter @machi/api dev",
    "dev:mobile": "pnpm --filter @machi/mobile start",
    "dev:mobile:ios": "pnpm --filter @machi/mobile ios",
    "build": "pnpm -r build",
    "build:api": "pnpm --filter @machi/api build",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"**/*.{ts,tsx,vue,json,md}\"",
    "test": "pnpm -r test",
    "test:api": "pnpm --filter @machi/api test",
    "db:generate": "pnpm --filter @machi/api prisma:generate",
    "db:push": "pnpm --filter @machi/api prisma:push",
    "db:migrate": "pnpm --filter @machi/api prisma:migrate",
    "db:seed": "pnpm --filter @machi/api prisma:seed"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "prettier": "^3.2.0",
    "prisma": "5.22.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "dependencies": {
    "@prisma/client": "5.22.0"
  }
}
